{% extends 'base.html.twig' %}

{% block title %}
	{{parent()}}
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}

{% block body %}
	<div class="container mt-4">
		<div class="row">
			<div class="col-md-8 offset-md-2">
				<div class="card shadow">
					<div class="card-header bg-primary text-white">
						<h1 class="mb-0">Bucket List</h1>
					</div>
					<div class="card-body">
						<div class="list-group">
							{% for wish in wishes %}
								<a href={{path('_wish-details', {'id': wish.id})}} class="text-decoration-none">
									<div class="list-group-item">
										<h5 class="mb-1">
											<span class="text-muted">{{ wish.id }}</span>
											-
											{{ wish.title }}
										</h5>
										<p class="mb-1">{{ wish.category.name }}</p>
										<p class="mb-1">{{ wish.description }}</p>
										<small>
											{{ wish.author }}
											le
											{{ wish.dateCreated|date('d/m/Y') }}
										</small>
									</div>
								</a>
							{% endfor %}
						</div>
					</div>
					<div class="card-footer">
                        <a href="{{ path('_create-wish') }}" class="btn btn-primary text-decoration-none">
                            Ajouter un nouveau voeu
                        </a>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
